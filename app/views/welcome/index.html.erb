<% if @user.team.blank? %>
      <h3>You're not following a team</h3>
<% else %>
    <h3>You're team is <%= @user.team %></h3>
<% end %>


<h5>Change Team:</h5>
<%= form_for :trip, url: {action: "show"}, html: {method: "get"} do |f| %>
    <%= f.select :country_id, options_for_select(@countries.collect { |country|
      [country.name.titleize, country.id] }, 1), {}, { id: 'countries_select' } %>
    <%= f.select :city_id, options_for_select(@cities.collect { |city|
      [city.name.titleize, city.id] }, 0), {}, { id: 'cities_select' } %>
    <%= f.submit "Go!" %>


<% end %>

</br>
<% if @user.phone.blank? %>
    <h5>You haven't added a phone number! Please add one in 'Edit Info' below</h5>
    <% else %>
    <h5>Phone: </h5><%= @user.phone %>
<% end %>

</br></br>
<%= link_to 'Edit Info', edit_user_registration_path %>